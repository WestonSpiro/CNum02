#include <stdio.h>

int main(void){
    int number;
    int max = -100000;
    int Evens = 0, Odds = 0;
    int sum = 0;
    scanf("%d", &number);
    while (number != -1){
        sum += number;
        if (number % 2)
            Odds++;
        else
            Evens++;
        if (number > max)
            max = number;
        scanf("%d", &number);}
    printf("The sum is %d\n", sum);
    printf("Even numbers: %d\n", Evens);
    printf("Odd numbers: %d\n", Odds);
    printf("The largest number is %d\n", max);
    return 0;
}
